<p id="notice"><%= notice %></p>

<h4 class="text-right">Current Temp is <%= @temperature.round(2) %> degrees celcius</h4>

<h1>Items</h1>

<table class="table table-hover" >
  <thead style="color:purple">
    <tr>

      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3">Options</th>
      <th colspan="2">Change Quantity</th>


    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>


        <td><%= item.id%></td>
        <td><%= item.name %></td>
        <td><%= number_to_currency(item.price) %></td>



        <%if item.quantity > 0 %>
        <td><%= item.quantity %></td>
        <%else%>
        <td><b style="color:green">Sold Out!</b></td>
        
        <%end%>



        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
        <td><%= link_to 'Add Quantity', add_quantity_path(item_id: item.id), class: "btn btn-success" %></td>


        <%if item.quantity > 0 %>
        <td><%= link_to 'Decrease Quantity', decrease_quantity_path(item_id: item.id), class: "btn btn-danger" %></td>
        <%else%>
        <td><i>Decrease Quantity<i></td>
        <%end%>





      </tr>
    <% end %>
  </tbody>
</table>

<br>

